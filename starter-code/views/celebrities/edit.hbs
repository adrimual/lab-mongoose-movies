<h2>Edit celebrity</h2>
<form action="/celebrities/{{celebrity._id}}/edit" method="POST">
    <div>
        <label for="name">Name</label>
        <input type="text" id="name" name="name" placeholder="Write a name" value="{{celebrity.name}}">
    </div>
    <div>
        <label for="occupation">Occupation</label>
        <input type="text" id="occupation" name="occupation" placeholder="Write a occupation"
            value="{{celebrity.occupation}}">
    </div>
    <div>
        <label for="catchPhrase">Catchphrase</label>
        <input type="text" id="catchPhrase" name="catchPhrase" placeholder="Write a catchphrase"
            value="{{celebrity.catchPhrase}}">
    </div>
</form>